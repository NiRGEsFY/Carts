<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Carts</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Carts.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/@ViewData["CSS"]" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="profile">
            <a asp-area="" asp-controller="Carts" asp-action="Index">Профиль</a>
        </div>
    </header>
    @RenderBody()


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
